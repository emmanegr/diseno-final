					</div>
					<div class="span2">
						<div class="Cabeza">
							<h1><%= link_to "Concursos" , competitions_path %></h1>
						</div>
						
					</div>
					
					<div class="span2">
						<div class="Cabeza">
							<h1><%= link_to "Becas" , estudia_path %></h1>
						</div>
						
					</div>
					
					<% if current_user %>
					<div class="span2">
						<div class="Cabeza">
							<h1><%= link_to "Mi Cuenta" , :account %></h1>
						</div>
						
					</div>
					<% end %>

				</div>
			</div>
		</div>
	</div>
</div>

