</head>
<body>
<div class="row-fluid fomdo3">
	<div class="container">
		<div class="row">
			<div class="span6">
				<%= image_tag ("logo.png") %>
			</div>
			<div class="span4">
				<div class="row">
					<div class="span2">
						<% if current_user %>
						Hola, <%= link_to current_user.name, account_path %>
					</div>
					<div class="span2">
						<%= link_to "Cerrar Sesión", logout_path %>
						<% else %>
						<%= link_to "Iniciar Sesión", login_path %>
						<% end %>
					</div>
				</div>
			</div>
			<div class="span2">
				<% if !current_user %>
					<%= link_to "Crear Cuenta", signup_path  %>
				<% end %>
			</div>
		</div>
	</div>
</div>

