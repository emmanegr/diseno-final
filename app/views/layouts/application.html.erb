<!DOCTYPE html>
<html>
<head>
  <title>Diseno</title>
  <%= stylesheet_link_tag    "application", "bootstrap-responsive" %>
  <%= javascript_include_tag "modernizr-2.5.3-respond-1.1.0.min", "application", "jquery.kwicks-1.5.1.pack", "jquery.easing.1.3"  %>
  <%= csrf_meta_tags %>


</head>
<body>
<div class="row-fluid fomdo3">
	<div class="container">
		<div class="row">
			<div class="span6">
				<%= image_tag ("logo.png") %>
			</div>
			<div class="span4">
				<div class="row">
					<div class="span2">
						<% if current_user %>
						Hola, <%= link_to current_user.name, account_path %>
					</div>
					<div class="span2">
						<%= link_to "Cerrar Sesión", logout_path %>
						<% else %>
						<%= link_to "Iniciar Sesión", login_path %>
						<% end %>
					</div>
				</div>
			</div>
			<div class="span2">
				<% if !current_user %>
					<%= link_to "Crear Cuenta", signup_path  %>
				<% end %>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid fondo">
	<div class="bordeGris">
	</div>
	<div class="bordeGris2">
	</div>
		<div class="container">
		<div class="row">
			<div class="span12">
				<div class="row container">
					<div class="span1">
						<div class="Cabeza">
							<h1><%= link_to "Inicio" , root_path %> </h1>
						</div>
					</div>
					<div class="span1">
						<div class="Cabeza">
							<h1><%= link_to "Galería" , categorias_path %> </h1>
						</div>
						
					</div>
					<div class="span2">
						<div class="Cabeza">
							<h1><%= link_to "Compartir", posts_path %></h1>
						</div>
						
					</div>
					<div class="span2">
						<div class="Cabeza">
							<h1><%= link_to "Concursos" , categorias_path %></h1>
						</div>
						
					</div>
					
					<div class="span2">
						<div class="Cabeza">
							<h1><%= link_to "Extrangero" , categorias_path %></h1>
						</div>
						
					</div>
					
					<% if current_user %>
					<div class="span2">
						<div class="Cabeza">
							<h1><%= link_to "Mi Cuenta" , :account %></h1>
						</div>
						
					</div>
					<% end %>

				</div>
			</div>
		</div>
	</div>
</div>

<div id="row-fluid">
	<div class="container">
		<%= yield %>
	</div>
</div>

<div class="row-fluid fondo2">
	<div class="container">
		<div class="row container">
				<div class="span12">
					<div class="row">
						<a href="https://www.facebook.com">
						<div class="span2">
							<div class="cajaSocial">
								<div id="columnaFace">
									face
								</div>
							</div>
							<div class="cajaSocialTexto">Follow Us</div>
						</div>
						</a>
						<a href="https://www.twitter.com">
						<div class="span2">
							<div class="cajaSocial">
								<div id="columnaTwitter">
									twitter
								</div>
							</div>
							<div class="cajaSocialTexto">Mandanos un Tweet</div>
						</div>
						</a>
						<a href="https://www.tumblr.com">
						<div class="span2">
							<div class="cajaSocial">
								<div id="columnaTumblr">
									tumblr
								</div>
							</div>
						
							<div class="cajaSocialTexto">Tumblr</div>
						</div>
						</a>
						
						<a href="https://www.linkedin.com">
						<div class="span2">
							<div class="cajaSocial">
								<div id="columnalinkedIn">
									linked
								</div>
							</div>
							<div class="cajaSocialTexto">Solo Profesionales</div>
						</div>
						</a>
					</div>
				</div>
		</div>
	</div>
</div>

<div class="row-fluid fondo">
	<div class="container">		
		<div class="row">
			<div class="row container">
				<div class="span12 textocentrado">
					<div id="FraseJocosa">
						Impresiona a tus amiguitos Hipsters :D
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid menuFooter">
	<div class="container">		
		<div class="row">			
			<div class="row-fluid">
				<div class="span2">
					<div class="tituloFooter">
						<%= link_to "Galería", :account %><div class="imagenFooter"><%= image_tag ("galeria.png") %></div>
					</div>
					<div class="bordeGris3">
						<div class="textoImgFooter">holo</div>
					</div>
				</div>
				<div class="span2">
					<div class="tituloFooter">
						<%= link_to "Compartir", :account %> <div class="imagenFooter"><%= image_tag ("compartir.png") %></div>
					</div>
					<div class="bordeGris3">
						<div class="textoImgFooter">holo</div>
					</div>
				</div>
				<div class="span2">
					<div class="tituloFooter">
						<%= link_to "Concurso", :account %><div class="imagenFooter"><%= image_tag ("concurso.png") %></div>
					</div>
					<div class="bordeGris3">
						<div class="textoImgFooter">holo</div>
					</div>
				</div>
				
				<div class="span3">
					<div class="tituloFooter">
						<%= link_to "Extranjero", :account %><div class="imagenFooter"><%= image_tag ("extrangero.png") %></div>
					</div>
					<div class="bordeGris3">
					<div class="textoImgFooter">Más texto sobre extranjero</div>
				</div>
				</div>
			
				<div class="span3">
					<div class="tituloFooter">
						<%= link_to "Mi Cuenta", :account %> <div class="imagenFooter"><%= image_tag ("usuario.png") %></div>
					</div>
					<div class="bordeGris3">
						<div class="textoImgFooter">holo</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>			

<div class="row-fluid fondo">
	<div class="container">		
		<div class="row">			
			<div class="row container">
				<div class="span12 textocentrado">
						<div id="DerechosAutor">
							Balloons® Todos los Derechos Reservados 2012
						</div>
				</div>
			</div>
		</div>
	</div>
</div>
</body>
</html>
