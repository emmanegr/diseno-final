<h1>Mis Posts</h1>
<% if current_user.admin? %>
<table>
  <tr>
    <th></th>
    <th>Titulo</th>
    <th>Descripcion</th>
    <th>User</th>
    <th>Gusta</th>
    <th>Nogusta</th>
    <th>Vistas</th>
    <th>Categoria</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @posts = Post.find(:all, :order => "id DESC") %>
<% @posts.each do |post| %>
  <tr>
    <td><%= image_tag post.fotopost1.url :thumb %></td>
    <td><%= post.titulo %></td>
    <td><%= post.descripcion %></td>
    <td><%= post.user.name %></td>
    <td><%= post.gusta %></td>
    <td><%= post.nogusta %></td>
    <td><%= post.vistas %></td>
    <td><%= post.categorias.map {|x| x.to_label}.join ', ' %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
   
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
<% else %>
<table>
  <tr>
    <th></th>
    <th>Titulo</th>
    <th>Descripcion</th>
    <th>User</th>
    <th>Gusta</th>
    <th>Nogusta</th>
    <th>Vistas</th>
    <th>Categoria</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @posts = Post.find(:all, :order => "id DESC", :conditions => {:user_id => current_user.id}) %>
<% @posts.each do |post| %>
  <tr>
    <td><%= image_tag post.fotopost1.url :thumb %></td>
    <td><%= post.titulo %></td>
    <td><%= post.descripcion %></td>
    <td><%= post.user.name %></td>
    <td><%= post.gusta %></td>
    <td><%= post.nogusta %></td>
    <td><%= post.vistas %></td>
    <td><%= post.categorias.map {|x| x.to_label}.join ', ' %></td>
    <td><%= link_to 'Show', post %></td>
    <% if post.user.id == current_user.id %>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
<%end %>