
<h1><%= t(:Becas) %></h1>
<div class="margenes general">
	<div class="row-fluid">
		<div class="container ">
			<% @becas = Beca.find(:all, :order => "id DESC") %>
			<%  @becas = Beca.paginate(:page => params[:page], :per_page => 8) %>
  			<div class="row">
				<div class="span10">
			<% @becas.each do |beca| %>
					<p><%= link_to (image_tag beca.fotobeca.url :big), beca %></p>
  					<div class="titulo2"><%= link_to beca.nombre, beca %></div>
				    <p><%= beca.pais %></p>
				    <p><%= beca.fecha %></p>
				    <p><%= beca.carreras %></p>
				
			<% end %>
			</div>
		</div>
	</div>
</div>
<%= will_paginate @becas %>
